<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cast_expanded_controller_background_color"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:fadingEdge="none"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:src="@drawable/picture1" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ttt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            android:layout_width="@dimen/mr_dialog_fixed_width_major"
            android:layout_height="42dp"
            android:backgroundTint="@color/cast_expanded_controller_text_color"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Enter Username"
            android:textColor="@color/cast_expanded_controller_progress_text_color"
            android:textColorHighlight="@color/cast_expanded_controller_progress_text_color"
            android:textColorHint="@color/cast_expanded_controller_progress_text_color"
            android:textColorLink="@color/cast_expanded_controller_progress_text_color"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="156dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="@dimen/mr_dialog_fixed_width_major"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cast_expanded_controller_progress_text_color"
            android:ems="10"
            android:inputType="textPassword"
            android:text="Password"
            android:textColor="@color/cast_expanded_controller_progress_text_color"
            android:textColorLink="@color/cast_expanded_controller_progress_text_color"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="206dp" />

    </LinearLayout>

    <Button
        android:id="@+id/loginButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="@dimen/mr_dialog_fixed_width_major"
        android:layout_height="wrap_content"
        android:layout_above="@+id/createAccountButton"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/cast_expanded_controller_background_color"
        android:text="Login"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:textColorHint="@color/cast_expanded_controller_progress_text_color"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="267dp"
        tools:textColorHighlight="@color/cast_expanded_controller_progress_text_color" />

    <Button
        android:id="@+id/createAccountButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="@dimen/mr_dialog_fixed_width_major"
        android:layout_height="wrap_content"
        android:layout_above="@+id/unregisteredUserButton"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/cast_expanded_controller_background_color"
        android:text="Create Account"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:textColorHighlight="@color/cast_expanded_controller_progress_text_color"
        android:textColorHint="@color/cast_expanded_controller_progress_text_color"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="267dp" />


    <Button
        android:id="@+id/unregisteredUserButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="@dimen/mr_dialog_fixed_width_major"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:backgroundTint="@color/cast_expanded_controller_background_color"
        android:text="Enter as Guest"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:textColorHint="@color/cast_expanded_controller_text_color" android:textSize="12sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="325dp" />

</RelativeLayout>